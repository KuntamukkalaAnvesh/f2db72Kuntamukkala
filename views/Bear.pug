extends layout

block content
  h1= title
  <br>
  a(href='/bear/create')
     button.btn(class="btn btn-success") Create
  - let result=results
  div(class="container-fluid")
     div(class='row m-1')
        each item,index in result
            -let destination = `dispatch(\"/Bear/update?id=${item._id}\")`
            -let deleteView = `dispatch(\"/Bear/delete?id=${item._id}\")`
            -let detailView = `dispatch(\"/Bear/detail?id=${item._id}\")`
            div.col-sm-2(onclick=`buy(${index})`) Bear name: #{item["Bear_name"]}  <br>  Bear_size: #{item["Bear_size"]} <br> Bear_type: #{item["Bear_type"]} 
            button.btn(class="btn-primary ml-1", onclick = destination) Update
            button.btn(class="btn-primary ml-1", onclick = deleteView) Delete
            button.btn(class="btn-primary ml-1", onclick = detailView) Details 
  script.
      function buy(index){
         alert("you purchased item "+(index+1))
      }
  script.
      function dispatch(path){
      window.location.href=path
      }
